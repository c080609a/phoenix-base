#!/usr/bin/env sh

HIST_DIR="~/.erlang-history/"

set -e

mix local.hex --force
mix local.rebar --force
mix deps.get
mix compile

if [ ! -d "$HIST_DIR" ]; then
  git clone https://github.com/ferd/erlang-history.git $HIST_DIR
  cd $HIST_DIR
  sudo make install
  cd -
fi

mix ecto.create
mix ecto.migrate

yarn install

if [ "$CI" ]; then
  MIX_ENV=test mix do deps.compile, compile
fi
